{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "lib": ["esnext", "dom"],
    "types": ["react", "react-native", "react-native-reanimated"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "nyth-icons",
    "functions",
    "server",
    "src/scripts/**",
    "vendor",
    "android",
    "ios"
  ]
}


