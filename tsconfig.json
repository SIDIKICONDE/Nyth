{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "target": "ES2017",
    "module": "esnext",
    "lib": ["ES2017", "DOM"],
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "**/android",
    "**/ios",
    "**/vendor",
    "**/nyth-icons"
  ]
}
