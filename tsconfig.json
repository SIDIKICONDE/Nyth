{
  "compilerOptions": {
    // Configuration stricte recommandée
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    
    // Configuration de base
    "target": "ES2017",
    "module": "esnext",
    "lib": ["ES2017", "ES2018", "ES2019", "ES2020"],
    
    // JSX - Choisir selon votre projet
    "jsx": "react-native", // ou "react-jsx" pour React web
    
    // Modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    
    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    
    // Options de compilation
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    
    // Options supplémentaires recommandées
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "**/android",
    "**/ios", 
    "**/vendor",
    "**/nyth-icons",
    "nythweb",
    "**/build",
    "**/dist"
  ]
}